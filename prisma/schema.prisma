generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model ProductStats {
  id       String   @id
  roomId   String
  syncTime DateTime
  stats    Json
}

model SalesStats {
  id       String   @id
  roomId   String
  syncTime DateTime
  stats    Json
}

model RoomStats {
  id          String   @id
  roomId      String   @unique
  username    String
  displayName String?
  stats       Json
  createdAt   DateTime
}

model Affiliate {
  id       String   @id
  syncTime DateTime
  stats    Json
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Token {
  id        Int   @id @default(autoincrement())
  updatedAt DateTime @updatedAt
  code      String
  value     String @db.Text
  status    Int
}
