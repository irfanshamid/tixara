generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model ProductStats {
  id        String   @id
  roomId    String
  syncTime  DateTime
  stats     Json
}

model SalesStats {
  id        String   @id
  roomId    String
  syncTime  DateTime
  stats     Json
}

model RoomStats {
  id          String   @id
  roomId      String   @unique   // ID numeric dari live_meta.id
  username    String             // kktops
  displayName String?            
  stats       Json
  createdAt   DateTime
}
